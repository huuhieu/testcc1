<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg2"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="What is the algorithm\nthat you want to work with?"
        android:textColor="#15216D"
        android:textSize="17sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/Button1"
            android:layout_width="164dp"
            android:layout_height="65dp"
            android:layout_x="75dp"
            android:layout_y="52dp"
            android:text="Merge Sort"
            style="@style/btnStyleOrange"
            android:onClick="onButtonClick01"/>

        <Button
            android:id="@+id/Button2"
            android:layout_width="164dp"
            android:layout_height="65dp"
            android:layout_x="74dp"
            android:layout_y="179dp"
            android:text="Timsort" 
            style="@style/btnStylePaprika"
            android:onClick="onButtonClick02"/>

        <Button
            android:id="@+id/Button3"
            android:layout_width="164dp"
            android:layout_height="65dp"
            android:layout_x="74dp"
            android:layout_y="301dp"
            android:text="Counting Sort" 
            style="@style/btnStyleBlackpearl"
            android:onClick="onButtonClick03"/>

    </AbsoluteLayout>

</LinearLayout>